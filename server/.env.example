# Test Environment Configuration

# Copy this file to .env and fill in your actual values

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================

# MongoDB Test Database URI
# Use a separate test database to avoid affecting production data
MONGODB_TEST_URI=mongodb+srv://username:password@cluster.mongodb.net/database_test?retryWrites=true&w=majority

# MongoDB Production URI (for reference)
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/database?retryWrites=true&w=majority

# =============================================================================
# APPLICATION URLs
# =============================================================================

# Client Application URL (React dev server)
CLIENT_URL=http://localhost:5173

# Server Application URL (Express server)
SERVER_URL=http://localhost:5000

# =============================================================================
# EMAIL CONFIGURATION (for testing email functionality)
# =============================================================================

# SMTP Configuration for Brevo (formerly Sendinblue)
SMTP_USER=your_smtp_username
SMTP_PASS=your_smtp_password

# =============================================================================
# JWT CONFIGURATION
# =============================================================================

# JWT Secret for token generation and verification
JWT_SECRET=your_jwt_secret_key_here

# JWT Expiration time (in seconds)
JWT_EXPIRE=24h

# =============================================================================
# TEST CONFIGURATION
# =============================================================================

# Test Environment
NODE_ENV=test

# Playwright Configuration
# Set to true for CI/CD environments
CI=false

# Test Timeout (in milliseconds)
TEST_TIMEOUT=60000

# =============================================================================
# OPTIONAL CONFIGURATION
# =============================================================================

# File Upload Configuration (if using cloud storage)
# CLOUDINARY_CLOUD_NAME=your_cloudinary_cloud_name
# CLOUDINARY_API_KEY=your_cloudinary_api_key
# CLOUDINARY_API_SECRET=your_cloudinary_api_secret

# Payment Gateway Configuration (for testing payments)
# STRIPE_SECRET_KEY=sk_test_your_stripe_test_key
# STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key

# =============================================================================
# DEBUGGING
# =============================================================================

# Enable debug logging
DEBUG=false

# Log level for tests
LOG_LEVEL=info
